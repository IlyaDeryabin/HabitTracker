<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HabitTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1CD80E</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
        <item name="android:toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
    </style>

    <style name="HabitListItemTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HabitListItemDescription" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="HabitListItemType" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="HabitListItemPriority" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HabitEditorTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingStart">8dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
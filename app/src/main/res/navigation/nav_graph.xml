<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/habitListFragment">
    <fragment
        android:id="@+id/habitListFragment"
        android:name="ru.d3rvich.habittracker.screens.habit_list.HabitListFragment"
        android:label="HabitListFragment" >
        <action
            android:id="@+id/action_habitListFragment_to_habitEditorFragment"
            app:destination="@id/habitEditorFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/habitEditorFragment"
        android:name="ru.d3rvich.habittracker.screens.habit_editor.HabitEditorFragment"
        android:label="fragment_habit_editor"
        tools:layout="@layout/fragment_habit_editor" >
        <argument
            android:name="habitId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>